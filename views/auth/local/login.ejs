<div class="container my-5">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
      <h1 class="text-center">Log in</h1>
      <% if (locals.unauthorized) { %>
      <div class="alert alert-danger">
        Invalid email and/or password.
      </div>
      <% } %>
      <form method="post" action="/auth/local/login">
        <div class="form-group">
          <label for="username">Email</label>
          <input type="email" name="username" value="<%= locals.username %>" class="form-control" />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" class="form-control" />
        </div>
        <button class="btn btn-block btn-primary" type="submit">Submit</button>
        <div class="text-center">or</div>
        <a href="/auth/saml/login" class="btn btn-block btn-outline-primary">Log in using SAML SSO</a>
      </form>
    </div>
  </div>
</div>
