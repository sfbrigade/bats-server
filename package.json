{
  "name": "routed",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "16.13.1"
  },
  "scripts": {
    "heroku-prebuild": "cd client && yarn && cd ../server && yarn",
    "heroku-postbuild": "cd client && yarn build",
    "start:dev": "nf start -j Procfile.dev",
    "start:prod": "nf start",
    "test": "yarn prettier --check . && yarn lint && yarn test:server && yarn test:client --watchAll=false",
    "test:client": "cd client && yarn test",
    "test:server": "cd server && yarn test",
    "lint": "yarn eslint .",
    "lint:changed": "yarn eslint $(git diff --name-only | xargs)",
    "format": "yarn prettier --write .",
    "format:changed": "yarn prettier --write $(git diff --name-only | xargs)"
  },
  "dependencies": {
    "foreman": "^3.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^4.6.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^1.6.1",
    "prettier": "^2.7.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:jsx-a11y/recommended",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "jsx-a11y",
      "prettier"
    ],
    "rules": {
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true
        }
      ],
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "Sequelize|queryInterface"
        }
      ],
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "jsx-a11y/label-has-associated-control": [
        "error",
        {
          "assert": "either"
        }
      ],
      "react/jsx-boolean-value": [
        "error",
        "never",
        {
          "always": [
            "value"
          ]
        }
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    },
    "ignorePatterns": [
      "build",
      "node_modules"
    ]
  }
}
