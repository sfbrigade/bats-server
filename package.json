{
  "name": "bats-server",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.1",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "axios": "^0.21.0",
    "bcrypt": "^5.0.0",
    "bootstrap": "^4.5.2",
    "classnames": "^2.2.6",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "debug": "^4.1.1",
    "ejs": "^3.1.5",
    "eslint-config-react-app": "^5.2.1",
    "express": "^4.17.1",
    "express-ejs-layouts": "^2.5.0",
    "express-session": "^1.17.1",
    "foreman": "^3.0.1",
    "http-proxy-middleware": "^1.0.5",
    "http-status-codes": "^1.4.0",
    "lodash": "^4.17.20",
    "luxon": "^1.25.0",
    "mocha": "^8.1.1",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.4",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "passport-saml": "^1.3.4",
    "pg": "^8.3.0",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-router": "^5.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "sass": "^1.28.0",
    "sass-loader": "^10.0.5",
    "sequelize": "^6.3.3",
    "sequelize-auto": "^0.5.3",
    "sequelize-cli": "^6.2.0",
    "sequelize-fixtures": "^1.2.0",
    "supertest": "^4.0.2",
    "supertest-session": "^4.0.0",
    "uswds": "^2.9.0"
  },
  "engines": {
    "node": "14.8"
  },
  "scripts": {
    "start": "react-scripts start",
    "start:dev": "nf start -j Procfile.dev",
    "start:prod": "nf start",
    "build": "react-scripts build && yarn sass",
    "sass": "sass --load-path=node_modules/uswds/dist/scss --no-source-map --style=compressed theme/styles.scss build/libraries/uswds/theme/styles.css",
    "test": "yarn prettier --check . && yarn lint && yarn test:server && yarn test:client --watchAll=false",
    "test:client": "react-scripts test",
    "test:server": "mocha --recursive",
    "eject": "react-scripts eject",
    "lint": "eslint .",
    "format": "yarn prettier --write ."
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "airbnb",
      "plugin:jsx-a11y/recommended",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "jsx-a11y",
      "prettier"
    ],
    "rules": {
      "no-underscore-dangle": [
        "error",
        {
          "allowAfterThis": true
        }
      ],
      "no-param-reassign": [
        "error",
        {
          "props": false
        }
      ],
      "jsx-a11y/label-has-associated-control": [
        "error",
        {
          "assert": "either"
        }
      ],
      "react/jsx-boolean-value": [
        "error",
        "never",
        {
          "always": [
            "value"
          ]
        }
      ],
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ]
    },
    "ignorePatterns": [
      "build",
      "node_modules"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:4000",
  "devDependencies": {
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-react-hooks": "^4.1.0",
    "prettier": "2.1.1"
  }
}
